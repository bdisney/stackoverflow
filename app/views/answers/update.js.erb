$('.toast').remove();
<% if @answer.errors.any? %>
  <% if remotipart_submitted? %>
    $('#flash-errors').html('<%= j "#{render 'shared/errors_messages', resource: @answer}" %>');
  <% else %>
    $('#flash-errors').html('<%= j render 'shared/errors_messages', resource: @answer %>');
  <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('#answer-<%= @answer.id %>').html('<%= j "#{render @answer}" %>');
  <% else %>
    $('#answer-<%= @answer.id %>').html('<%= j render @answer %>');
  <% end %>
  toastr.success('Answer was updated.');
<% end %>
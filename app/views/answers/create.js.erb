$('.toast').remove();
<% if @answer.errors.any? %>
  <% if remotipart_submitted? %>
    $('#flash-errors').html('<%= j "#{render 'shared/errors_messages', resource: @answer}" %>');
  <% else %>
    $('#flash-errors').html('<%= j render 'shared/errors_messages', resource: @answer %>');
  <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('.answers-list').append('<%= j "#{render @answer}" %>');
    $('.answers-header').html('<%= j "#{render 'answers/answers_counter'}" %>')
  <% else %>
    $('.answers-list').append('<%= j render @answer %>');
    $('.answers-header').html('<%= j render 'answers/answers_counter' %>')
  <% end %>

  toastr.success('Answer was created.');
  $('#new-answer-form').val('');
  $('#answer_attachments_attributes_0_file').val('');
<% end %>
